{% extends 'Basef.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

{{ form_start(f,{'attr': {'novalidate': 'novalidate'}} ) }} 

<style>
    /* Style du conteneur du formulaire */
    .form-container {
        max-width: 350px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f2f2f2;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
        text-align: center;
    }

    /* Style des champs de formulaire */
    .form-container input[type=text],
    .form-container input[type=email],
    .form-container input[type=password] {
        width: calc(100% - 40px);
        padding: 8px;
        margin: 8px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 14px;
    }

    /* Style du bouton de soumission */
    .form-container button {
        background-color: #4CAF50;
        color: white;
        padding: 10px 18px;
        margin-top: 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: calc(100% - 40px);
        font-size: 14px;
        transition: background-color 0.3s;
    }

    /* Changement de couleur du bouton au survol */
    .form-container button:hover {
        background-color: #45a049;
    }

    /* Style du titre du formulaire */
    .form-title {
        color: #4CAF50; /* Couleur du titre en vert */
        font-size: 20px;
        margin-bottom: 15px;
    }

    /* Style du message d'erreur */
    .error-message {
        color: red;
        margin-top: 5px;
        text-align: left;
        font-size: 12px;
    }

    /* Style de l'étiquette */
    label {
        font-size: 14px;
        margin-bottom: 5px;
        text-align: left;
        display: block;
        color: #555;
    }
</style>

<div class="form-container">
    <h2 class="form-title">S'inscrire</h2>
    {{ form_start(f) }}

    <label for="Nom">Nom :</label>
    {{ form_widget(f.Nom) }}
    <div class="error-message">{{ form_errors(f.Nom) }}</div>

    <label for="Prenom">Prénom :</label>
    {{ form_widget(f.Prenom) }}
    <div class="error-message">{{ form_errors(f.Prenom) }}</div>

<label for="Date_de_naissance">Date de naissance :</label>
{{ form_widget(f.Date_de_naissance, { 'type': 'datetimeinterface' }) }}
<div class="error-message">{{ form_errors(f.Date_de_naissance) }}</div>



    <label for="Genre">Genre :</label>
    {{ form_widget(f.Genre) }}
    <div class="error-message">{{ form_errors(f.Genre) }}</div>

    <label for="Adresse">Adresse :</label>
    {{ form_widget(f.Adresse) }}
    <div class="error-message">{{ form_errors(f.Adresse) }}</div>

    <label for="Num_de_telephone">Numéro de téléphone :</label>
    {{ form_widget(f.Num_de_telephone) }}
    <div class="error-message">{{ form_errors(f.Num_de_telephone) }}</div>

   
    <div class="input-box">
                {{ form_row(f.email, {'attr': {'placeholder': 'Enter your email'}}) }}
            </div>

    <label for="password">Mot de passe :</label>
    {{ form_widget(f.password) }}
    <div class="error-message">{{ form_errors(f.password) }}</div>

   

    {{ form_end(f) }}
</div>
{% endblock %}